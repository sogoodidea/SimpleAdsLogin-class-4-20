<div class="row">
    <div class="col-md-6 offset-3">
        <h1 style="text-align: center">Sign Up New Account</h1>
        <br />
        <form action="/home/signup" method="post" class="card card-body bg-light">
            <input name="email" type="text" class="form-control" placeholder="Email" /><br />
            <input name="password" type="password" class="form-control" placeholder="Password" /><br />
            <input name="name" type="text" class="form-control" placeholder="Name" /><br />
            <input name="phoneNumber" type="text" class="form-control" placeholder="Phone Number" /><br />
            <button class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>

